<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Edit text styles -->

    <style name="DefaultButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/trout</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- dialog animation-->
    <style name="MindDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/MindDialogStyle.Animation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MindDialogStyle.Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--Dialogs-->
    <style name="ProgressDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">

        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">9sp</item>
    </style>
</resources>